<!-- JAVASCRIPT -->
<script>
// 1Ô∏è‚É£ LOGIN
function login(){
  let email = document.getElementById("email").value;
  let pass = document.getElementById("password").value;

  if(email !== "" && pass !== ""){
    document.getElementById("loginPage").style.display = "none";
  } else {
    alert("Please enter email and password");
  }
}

// 2Ô∏è‚É£ NAVIGATION ACTIVE
let sections = document.querySelectorAll("section, div[id]");
let navLinks = document.querySelectorAll("header .nav a");

window.onscroll = () => {
  sections.forEach(sec => {
    let top = window.scrollY;
    let offset = sec.offsetTop - 150;
    let height = sec.offsetHeight;
    let id = sec.getAttribute("id");

    if(top >= offset && top < offset + height){
      navLinks.forEach(links => {
        links.classList.remove("active");
        let activeLink = document.querySelector("header .nav a[href*="+ id +"]");
        if(activeLink) activeLink.classList.add("active");
      });
    }
  });
};

// 3Ô∏è‚É£ SCROLL TO TOP BUTTON
let topBtn = document.createElement("button");
topBtn.innerText = "‚Üë";
topBtn.style.cssText = `
position:fixed;bottom:25px;right:25px;padding:12px 18px;
font-size:20px;border:none;border-radius:50%;cursor:pointer;
background:#ff136f;color:#fff;display:none;z-index:9999;
box-shadow:0 4px 10px rgba(0,0,0,0.3)
`;
document.body.appendChild(topBtn);

window.addEventListener('scroll', () => {
  topBtn.style.display = window.scrollY > 300 ? "block" : "none";
});

topBtn.onclick = () => { window.scrollTo({top:0,behavior:"smooth"}); };

// 4Ô∏è‚É£ PRODUCT IMAGE ZOOM
document.querySelectorAll(".product-card img").forEach(img => {
  img.addEventListener("mouseover", () => img.style.transform = "scale(1.1)");
  img.addEventListener("mouseout", () => img.style.transform = "scale(1)");
});

// 5Ô∏è‚É£ SECTION FADE-IN
const observer = new IntersectionObserver(entries =>{
  entries.forEach(entry=>{
    if(entry.isIntersecting){
      entry.target.style.opacity = 1;
      entry.target.style.transform = "translateY(0px)";
    }
  });
},{
  threshold:0.3
});

document.querySelectorAll("section").forEach(sec=>{
  sec.style.opacity = 0;
  sec.style.transform = "translateY(60px)";
  sec.style.transition = "0.7s";
  observer.observe(sec);
});

</script>

